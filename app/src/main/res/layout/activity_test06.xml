<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.the.algorithm.Test06Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은 금액 : "/>

        <TextView
            android:id="@+id/remainMoneyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000,000원"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 고른 번호"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myNum01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/myNum02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="4"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/myNum03"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="8"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/myNum04"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="27"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/myNum05"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="33"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/myNum06"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="42"
            android:textSize="25sp"
            android:gravity="center"/>


    </LinearLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정답 번호"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/okNum01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/okNum02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="4"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/okNum03"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="8"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/okNum04"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="27"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/okNum05"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="33"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/okNum06"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="42"
            android:textSize="25sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:textSize="25sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/bonusNumberTxt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="25"
            android:textSize="25sp"
            android:gravity="center"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/earnMoneyTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="0원 획득!"/>

    <Button
        android:id="@+id/startBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추첨 시작"/>

</LinearLayout>
