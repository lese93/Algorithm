<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/myMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:clickable="true"
            android:id="@+id/myMessageTxt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/my_message_content_radius_box"
            android:gravity="center"
            android:padding="7dp"
            android:text="ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cpuMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안드로 보이"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:clickable="true"
                    android:id="@+id/cpuMessageTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/opponent_message_content_radius_box"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ"
                    android:textColor="#000000" />

                <!--Shift + F6-->


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>